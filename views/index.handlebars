

<div class = "contianer">
    <div class="jumbotron text-center bg">
        <h1>Eat-Da-Burger</h1>
    </div>

    <div class="row">
        <div class="col-sm-12">
            <form id="input">
                <div class="form-group"
                    <label for="name">Type the burger you want to eat!</label>
                    <input type="text" id = "burger-input" class="form-control form-control-lg " placeholder="Burger name">
                </div>
                <button type="submit" class="btn btn-success mb-2" id ="submit-btn">Submit</button>
            </form>
        </div>
    </div>

    <div class="row mt-3">
        <div class="col-sm-6">
            <div class = "card">
                <div class="card-header">
                    Burger to eat
                </div>
                <ul class="list-group list-group-flush">
                    {{#each burgers}}
                        {{#unless devoured}}
                         {{> burger/burger-block devoured=false}}
                        {{/unless}}
                    {{/each}}
                </ul>
                
            </div>
        </div>

        <div class="col-sm-6">
            <div class = "card">
                <div class="card-header">
                    Devoured Burgers
                </div>
                <ul class="list-group list-group-flush">
                    {{#each burgers}}
                        {{#if devoured}}
                        {{> burger/burger-devoured devoured=true}}
                        {{/if}}
                    {{/each}}
                </ul>
            </div>
        </div>
    </div>

</div>

